<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.etiya.etiyabadgetablib.EtiyaBadgeTab
        android:id="@+id/tab_trade"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:typeface="monospace"
        app:tabMode="scrollable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--app:tabIndicatorColor="@color/colorPrimary"-->
    <!--app:tabSelectedTextColor="@color/black_3f3a3a"-->
    <!--app:tabTextColor="@color/gray_888888"-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_trade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_F8F8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_trade">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>