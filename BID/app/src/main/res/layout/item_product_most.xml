<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_product_most_brief"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/white"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_product_most"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_128"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_product_most_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:text="@string/nike_air_mag"
            card_view:layout_constraintStart_toEndOf="@+id/image_product_most"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_product_most_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder_time"
            card_view:layout_constraintStart_toEndOf="@+id/image_product_most"
            card_view:layout_constraintTop_toBottomOf="@+id/text_product_most_title" />

        <TextView
            android:id="@+id/text_product_most_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/nt_dollars"
            card_view:layout_constraintStart_toEndOf="@+id/image_product_most"
            card_view:layout_constraintTop_toBottomOf="@+id/text_product_most_remaining_time" />

        <TextView
            android:id="@+id/text_product_most_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/placeholder_price"
            card_view:layout_constraintBottom_toBottomOf="@+id/text_product_most_price_title"
            card_view:layout_constraintStart_toEndOf="@+id/text_product_most_price_title"
            card_view:layout_constraintTop_toTopOf="@+id/text_product_most_price_title" />

        <TextView
            android:id="@+id/text_product_most_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/slash"
            card_view:layout_constraintBottom_toBottomOf="@+id/text_product_most_price"
            card_view:layout_constraintStart_toEndOf="@+id/text_product_most_price"
            card_view:layout_constraintTop_toTopOf="@+id/text_product_most_price" />

        <TextView
            android:id="@+id/text_product_most_place_bid_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            card_view:layout_constraintBottom_toBottomOf="@+id/text_product_most_slash"
            card_view:layout_constraintStart_toEndOf="@+id/text_product_most_slash"
            card_view:layout_constraintTop_toTopOf="@+id/text_product_most_slash" />

        <TextView
            android:id="@+id/text_product_most_place_bid_times_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/bit_times_on_brief"
            card_view:layout_constraintBottom_toBottomOf="@+id/text_product_most_place_bid_times"
            card_view:layout_constraintStart_toEndOf="@+id/text_product_most_place_bid_times"
            card_view:layout_constraintTop_toTopOf="@+id/text_product_most_place_bid_times" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>